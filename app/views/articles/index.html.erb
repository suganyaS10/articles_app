<h3>Articles</h3>

Total: <%= @articles.size %>
<% @articles.each do |article| %>
<div class="row">
  <div class="col-sm-3">
    <div class="well">
     <p><%= article.title %></p>
     <img src= <%= article.image_url %> class="img-circle" height="55" width="55" alt="Avatar">
    </div>
  </div>

  <div class="col-sm-6">      
    <div class="well">
      <%= article.description %>
      <%= likes_btn(article) %>
    </div> 
  </div>

  <div class="col-sm-3">
    <div class="well">
     <p><%= article.user.first_name %></p>
     <img src= <%= article.user.avatar_url %> class="img-circle" height="55" width="55" alt="Avatar">
    </div>
  </div>
</div>
<% end %>
